    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@innerbloom/config": "file:../../packages/config",
    "@innerbloom/tsconfig": "file:../../packages/tsconfig",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.6",
    "@types/swagger-ui-express": "^4.1.6",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
